<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cliqv1">
    <!-- berechtigt die App das Internet zu nutzen und auf den Internen Speicher zuzugreifen -->
    <!-- sollten berechtigungen fehlen, wird die App von internen Einstellungen gehindert -->
    <!-- die entsprechenden Aktionen auszuführen und stürtzt ab -->
    <uses-permission-sdk-23 android:name="android.permission.INTERNET" /> <!-- Audiobereich -->
    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.RECORD_AUDIO" />
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Kamerabereich -->
    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".GroupSummaryActivity" />
        <activity android:name=".AudioActivity" />
        <activity android:name=".CameraActivity" />
        <activity
            android:name=".ChangeAvatarActivity"
            android:label="@string/change_avatar" />
        <activity
            android:name=".ChangeEmailActivity"
            android:label="@string/change_email" />
        <activity android:name=".ChangeGroupPicActivity" />
        <activity
            android:name=".ChangePasswordActivity"
            android:label="@string/change_password" />
        <activity
            android:name=".ChatActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ConsentFormActivity" />
        <activity
            android:name=".GroupChatActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".GroupChatViewActivity"
            android:label="@string/view_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopUpAttachFileActivity"
            android:theme="@style/AppTheme.AttachFilePopUp" />
        <activity
            android:name=".PopUpConsentFormActivity"
            android:theme="@style/AppTheme.AttachFilePopUp" />
        <activity
            android:name=".PopUpGroupSettingsActivity"
            android:theme="@style/AppTheme.AttachFilePopUp" />
        <activity
            android:name=".PopUpTranslatorActivity"
            android:theme="@style/AppTheme.AttachFilePopUp" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/profile" />
        <activity
            android:name=".ProfileSettingsActivity"
            android:label="@string/profileSettings" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/registration" />
        <activity
            android:name=".UserListActivity"
            android:label="@string/groupchat"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>