<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainbarLayout">

        <include layout="@layout/appbar_layout"
            android:id="@+id/main_toolbar">
        </include>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnTakePicture"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:layout_marginLeft="8dp"
                android:drawableRight="@drawable/ic_camera_alt_white_24dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/take_photo" />

            <Button
                android:id="@+id/btnRecordVideo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:layout_marginLeft="8dp"
                android:drawableRight="@drawable/ic_videocam_white_24dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/record_video" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnOpenGallery"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:drawableRight="@drawable/ic_collections_white_24dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:text="@string/open_gallery" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:drawableRight="@drawable/ic_photo_filter_white_24dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/bwFilter" />

            <Button
                android:id="@+id/btnCropImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:drawableRight="@drawable/ic_crop_white_24dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/cropImage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSend"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:text="@string/send" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>