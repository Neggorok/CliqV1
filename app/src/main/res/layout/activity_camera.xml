<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Toolbar -->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/changeAvatarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNew"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/camera"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnTakePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:layout_marginLeft="8dp"
                android:drawableRight="@drawable/ic_camera_alt_white_24dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/take_photo"
                android:onClick="takePicture"/>

            <Button
                android:id="@+id/btnRecordVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:layout_marginLeft="8dp"
                android:drawableRight="@drawable/ic_videocam_white_24dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/record_video" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ImgView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border">

            <!--Hier soll die Vorschau des Ausgewählten Fotos erscheinen -->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <!-- Ab hier soll die Foto-Bearbeitung ermöglicht werden -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imgEdit"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:drawableRight="@drawable/ic_photo_filter_white_24dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/bwFilter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnCropImage"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:drawableRight="@drawable/ic_crop_white_24dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/cropImage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="bottom|right">


            <!-- Hier soll das Senden des Fotos ermöglicht werden -->

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/oval"
                android:text="@string/send"
                android:src="@drawable/ic_send_white_24dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>