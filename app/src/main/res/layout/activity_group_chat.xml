<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:layout_goneMarginRight="5dp"
    tools:context=".GroupChatActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/groupchatToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNew"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/deleteMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupchatToolbar"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/ic_delete_white_24dp"
            android:background="@drawable/circle" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout_groupChat"
        android:layout_width="match_parent"
        android:layout_below="@+id/deleteMessage"
        android:layout_above="@+id/sendMessage"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/groupMessage_recycler_view">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <LinearLayout
        android:id="@+id/sendMessage"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_emoji"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_emoji_white_24dp"
            android:padding="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorOrange"
            android:background="@drawable/circle"/>

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:hint="@string/message"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/btn_attachFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_attach_file_white_24dp"
            android:padding="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/circle"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/oval"
            android:src="@drawable/ic_send_white_24dp"
            android:padding="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:onClick="sendMessage" />


    </LinearLayout>


</RelativeLayout>
