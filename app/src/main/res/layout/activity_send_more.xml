<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_photo_white_24dp"
        android:padding="15dp"
        android:id="@+id/ivbtn_photo"
        android:background="@color/colorOrange"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_video_library_white_24dp"
        android:padding="15dp"
        android:id="@+id/ivbtn_video"
        android:background="@color/colorOrange"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_documents_white_24dp"
        android:padding="15dp"
        android:id="@+id/ivbtn_document"
        android:background="@color/colorOrange"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mic_white_24dp"
        android:padding="15dp"
        android:id="@+id/ivbtn_audio"
        android:background="@color/colorOrange"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>