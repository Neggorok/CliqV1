<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cliqv1.ProfileActivity">

    <ImageButton
        android:id="@+id/chat_nav"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_chat_white_24dp"
        android:background="@color/colorOrange" />

    <ImageButton
        android:id="@+id/profile_nav"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/chat_nav"
        android:src="@drawable/ic_person_white_24dp"
        android:background="@color/colorOrange" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/groupchat_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/standard_user_image"/>

    <LinearLayout
        android:id="@+id/profile_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/groupchat_imageView"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/groupchat_name"
            android:text="profile_usernameTV"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>



</RelativeLayout>