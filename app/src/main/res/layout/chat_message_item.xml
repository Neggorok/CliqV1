<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:id="@+id/linearLayout">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/message_userImageIV"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.87">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_usernameTV"
            android:text="Name"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Message"
            android:textSize="15sp"
            android:id="@+id/message_messageTV"/>

        <TextView
            android:id="@+id/message_timestampTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="11sp"
            android:text="TimeStamp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/deleteMessage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="11sp"
                android:onClick="deleteMessage"
                android:drawableRight="@drawable/ic_delete_orange_15dp" />

            <TextView
                android:id="@+id/readReceipt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:textSize="11sp"
                android:drawableRight="@drawable/ic_check_orange_15dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>