<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cliqv1.uebersetzerActivity">

    <TextView
        android:id="@+id/ueberschrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Übersetzer"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#317933"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/eingabeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/ueberschrift"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:hint="Zu übersetzender Text..."
        android:gravity="center"/>

    <Button
        android:id="@+id/button_uebersetzen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eingabeEditText"
        android:layout_centerHorizontal="true"
        android:text="übersetzen"
        android:layout_marginTop="25dp"
        android:onClick="getTranslation"/>

    <TextView
        android:id="@+id/translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Übersetzung"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_uebersetzen"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#317933"/>

