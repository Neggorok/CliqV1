<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/delete_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/delete_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/filter_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/profanity_filter"
        app:layout_constraintBottom_toTopOf="@+id/filter2_switch"
        app:layout_constraintTop_toBottomOf="@+id/delete_switch" />

    <Switch
        android:id="@+id/filter2_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/abbreviation_filter"
        app:layout_constraintTop_toBottomOf="@+id/filter_switch" />

    <TextView
        android:id="@+id/members_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="100dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/filter2_switch"
        android:text="@string/members_group" />

    <ListView
        android:id="@+id/groupuser_list"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>