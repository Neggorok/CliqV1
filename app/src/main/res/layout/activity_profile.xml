<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.cliqv1.ProfileActivity">

    <ImageButton
        android:id="@+id/chat_nav"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_chat_white_24dp"
        android:background="@color/colorOrange" />

    <ImageButton
        android:id="@+id/profile_nav"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/chat_nav"
        android:src="@drawable/ic_person_white_24dp"
        android:background="@color/colorLightGrey" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/groupchat_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:padding="10dp"
        android:src="@drawable/standard_user_image"/>

        <ImageButton
            android:id="@+id/btnProfileSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="205dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_toRightOf="@+id/groupchat_imageView" />

    <LinearLayout
        android:id="@+id/profile_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btnProfileSettings"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/groupchat_name"
            android:text="profile_usernameTV"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/profile_linearLayout"
        android:layout_marginTop="40dp"
        android:background="@drawable/border"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_settings"
            android:textSize="18dp"
            android:paddingTop="15dp"/>

    <Switch
        android:id="@+id/delete_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:textSize="15sp"
        android:text="@string/delete_switch" />

    <Switch
        android:id="@+id/filter_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="70dp"
        android:textSize="15sp"
        android:paddingBottom="20dp"
        android:text="@string/profanity_filter" />

    </LinearLayout>

</RelativeLayout>
