<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNew"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/profile"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/NavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileToolbar"
        android:background="@color/colorOrange"
        design:itemTextColor="@color/colorWhite"
        design:itemIconTint="@color/colorWhite"
        design:menu="@menu/menu_navigation" >

    </android.support.design.widget.BottomNavigationView>

    <ImageView
        android:id="@+id/groupchat_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/standard_user_image"
        android:layout_below="@+id/NavBar"/>

        <ImageButton
            android:id="@+id/btnProfileSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_toRightOf="@+id/groupchat_imageView" />

    <LinearLayout
        android:id="@+id/profile_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btnProfileSettings"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/groupchat_name"
            android:text="profile_usernameTV"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/line"
        android:layout_below="@+id/profile_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorOrange"/>

    <LinearLayout
        android:id="@+id/status"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="30dp"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourStatus"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_marginTop="20dp">

        <android.support.text.emoji.widget.EmojiEditText
            android:id="@+id/editTextEmoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/status"/>

        <android.support.text.emoji.widget.EmojiButton
            android:id="@+id/btnEmoji"
            android:drawableRight="@drawable/ic_emoji_white_24dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/emoji"
            android:background="@color/colorOrange" />

        <android.support.text.emoji.widget.EmojiTextView
            android:id="@+id/textViewEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp" />

    </LinearLayout>

</RelativeLayout>
